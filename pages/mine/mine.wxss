button {
  background-color: transparent;
  line-height: auto;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: #fff;
  white-space: nowrap;
}

button::after {
  border: none;
}

.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden;
  overflow-y: auto;
  background-color: #f5f6f7;
}

.container_top {
  position: relative;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 240rpx;
  background-size: cover;
  margin-bottom: 20rpx;
}

.ty_4 {
  border-radius: 50%;
  background-color: rgb(255, 255, 255);
  opacity: 0.412;
  box-shadow: 0px 3px 5.52px 0.48px rgba(60, 152, 231, 0.2);
  position: absolute;
  left: 341px;
  top: 335px;
  width: 70px;
  height: 70px;
  z-index: 136;
}

.top_img {
  width: 148rpx;
  height: 148rpx;
  background-color: #fff;
  border-radius: 50%;
  margin: 40rpx 20rpx 50rpx 40rpx;
}

.top_img_inside {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 4rpx;
  margin-left: 4rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_59db34f92fa49aa0%21400x400_big.jpg');
  background-size: cover;
}

.top_text {
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
}

.top_text>text:first-child {
  font-size: 28rpx;
  color: #fff;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.top_text>text:last-child {
  font-size: 20rpx;
  color: #fff;
  font-weight: 300;
}

.top_edit {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  width: 24rpx;
  height: 24rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_wd_%E9%A1%B6%E9%83%A8%E7%BC%96%E8%BE%91%E8%B5%84%E6%96%99.png');
  background-size: cover;
}

/* 底下列表 */

.container_content {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.container_content_first {
  /* margin-top: 260rpx; */
}

.content_list {
  display: flex;
  justify-content: flex-start;
  height: 90rpx;
  border-bottom: 1rpx solid #efefef;
  line-height: 90rpx;
  padding-left: 50rpx;
  font-size: 24rpx;
}

.content_list>text:first-child {
  display: block;
  width: 176rpx;
  color: rgb(102, 102, 102);
}

.content_list>text:last-child {
  color: rgb(51, 51, 51);
}

.content_list_title {
  display: flex;
  align-items: center;
  padding-left: 0;
}

.content_list_title>text {
  padding-right: 6rpx;
  color: rgb(51, 51, 51);
}

.title_img {
  width: 24rpx;
  height: 24rpx;
  background-size: cover;
  margin: 0 11rpx 2rpx 40rpx;
}

.content_switch {
  display: flex;
  justify-content: space-between;
}

.content_switch>switch {
  margin-right: 40rpx;
}

