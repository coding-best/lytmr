.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
}

text {
  font-size: 24rpx;
  color: #333;
}

.container {
  overflow-x: hidden;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background-color: #fff;
}

.header_img {
  width: 318rpx;
  height: 150rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_wd_lxwm%E7%BB%BC%E5%90%88%E5%90%8D%E7%A7%B0%E9%94%A5%E7%89%88@3x.png');
  background-size: cover;
}

.desc {
  height: 260rpx;
  padding: 0 40rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: -15rpx;
}

.all {
  height: auto;
  overflow: visible;
}

/* 展开更多 */

.more {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.more>text {
  font-size: 20rpx;
  color: #999;
}

.bottom {
  width: 21rpx;
  height: 10rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_bottom.png');
  background-size: cover;
  margin-right: 8rpx;
  margin-left: 300rpx;
}

.scale {
  margin-left: 340rpx;
  transform: scaleY(-1);
}

/* 底下列表 */

.content {
  margin-top: 20rpx;
  background-color: #fff;
}

.content_list {
  display: flex;
  align-items: center;
  padding: 33rpx 0 33rpx 40rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.content_list:last-child {
  border: none;
}

.content_list_icon {
  width: 24rpx;
  height: 24rpx;
  background-size: cover;
  margin-right: 10rpx;
}
