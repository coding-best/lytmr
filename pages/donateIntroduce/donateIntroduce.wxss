page {
  background-color: #e5f3ff;
}

.container {
  position: relative;
  width: 710rpx;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: 0rpx 1rpx 8rpx 0rpx rgba(60, 152, 231, 0.5);
  border-radius: 8rpx;
}

.header {
  width: 426rpx;
  height: 80rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_%E9%A1%B6%E9%83%A8%E5%9F%BA%E9%87%91%E4%BC%9A@3x.png');
  background-size: cover;
  margin: 0 auto;
  margin-top: 14rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.header >text {
  font-size: 26rpx;
  color: #fff;
  line-height: 68rpx;
}

.content {
  margin: 0 20rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx dashed #daeeff;
}

.content_last {
  margin-top: 40rpx;
}

.content_title {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.content_title_icon1 {
  width: 32rpx;
  height: 32rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_%E6%88%90%E7%AB%8Bicon@3x.png');
  background-size: cover;
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  z-index: 9;
}

.content_title_icon2 {
  width: 26rpx;
  height: 26rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_%E4%BD%9C%E7%94%A8icon@3x.png');
  background-size: cover;
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  z-index: 9;
}

.content_title >text {
  font-size: 24rpx;
  color: rgb(53, 145, 223);
  z-index: 9;
}

.content_title_shadow {
  background-color: #daeeff;
  position: relative;
  right: 326rpx;
  width: 328rpx;
  height: 14rpx;
  border-radius: 2rpx;
}

.content_list {
  margin-top: 15rpx;
}

.content_list >text {
  font-size: 22rpx;
  color: rgb(51, 51, 51);
  margin-bottom: 6rpx;
}

.newsDetail_content_img {
  width: 670rpx;
  height: 480rpx;
  border-radius: 3px;
  margin: 0 auto;
  margin-top: 40rpx;
  overflow: visible;
}

