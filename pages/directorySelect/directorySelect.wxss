.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
}

/* 搜索 */

.search {
  margin: 20rpx;
  width: 620rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.search_arr {
  display: flex;
  height: 100%;
  align-items: center;
}

.search_icon {
  width: 22rpx;
  height: 22rpx;
  background-size: cover;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_search.png');
  margin: 24rpx 17rpx 24rpx 20rpx;
  z-index: 999;
}

.search_arr input {
  height: 70rpx;
  width: 83%;
  border-radius: 5px;
  line-height: 70rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: #333;
}

.clear {
  position: relative;
  width: 26rpx;
  height: 26rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_clear.png');
  background-size: cover;
}

.clear_text {
  position: absolute;
  right: 0;
  top: 16rpx;
  padding: 20rpx 30rpx;
  white-space: nowrap;
  font-size: 26rpx;
  color: rgb(60, 152, 231);
}

/* 下边列表 */

.content {
  padding: 0 20rpx;
}

.content_top {
  width: 710rpx;
  height: 124rpx;
  background-color: #fff;
  border-radius: 10rpx 10rpx 0 0;
  margin-bottom: 8rpx;
}

.content_top>text {
  font-size: 26rpx;
  color: rgb(51, 51, 51);
  margin-left: 20rpx;
  line-height: 66rpx;
}

.recruit-star {
  position: relative;
  width: 40rpx;
  height: 46rpx;
  top: -10rpx;
  left: 20rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_%E4%B8%89%E6%A8%AA%E8%A3%85%E9%A5%B0%E6%97%97.png');
  background-size: cover;
}

.content_list {
  height: 194rpx;
  background-color: #fff;
  padding: 0 20rpx;
  margin-top: 32rpx;
  border-radius: 8rpx;
}

.content_list_list {
  width: 690rpx;
  display: flex;
  align-items: center;
  padding: 25rpx 0 16rpx 0;
  border-bottom: 1rpx solid #efefef;
}

.content_list_list:last {
  border-bottom: none;
}

.content_list_img {
  width: 64rpx;
  height: 64rpx;
  float: left;
  border-radius: 50%;
  background-size: cover;
  margin-right: 12rpx;
}

.content_list_info {
  display: flex;
  flex-direction: column;
}

.content_list_info>text:first-child {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
}

.content_list_name > text {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
}

.content_list_info>text:last-child {
  font-size: 22rpx;
  color: rgb(102, 102, 102);
}

.content_list_chat {
  position: relative;
  left: 420rpx;
  width: 40rpx;
  height: 40rpx;
  background-size: cover;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_chat.png');
}

.content_list_business {
  padding-top: 5rpx;
  padding-bottom: 6rpx;
}

.content_list_business>text {
  font-size: 22rpx;
  color: rgb(102, 102, 102);
}

/* 搜索关键词高亮 */

.light {
  color: #3c98e7 !important;
}
