<!-- 我的资料编辑页 -->
<view class="container">
  <view class="header" bindtap="chooseImage">
    <text>头像</text>
    <view class="header_right">
      <!-- <view class="header_img" style="background-image: url({{img}})"></view> -->
      <image class="header_img" src="{{img}}" bindtap="uploadImg" mode="aspectFill"></image>
      <view class="right"></view>
    </view>
  </view>

  <!-- 简介 -->
  <view class="content">
    <view class="content_title">
      <text>简介</text>
    </view>
    <textarea placeholder="说点什么吧..." placeholder-class="placeholder" value="{{describle}}" bindinput="textarea"/>
    <view class="word">
      <text style="color: rgb(60, 152, 231)">{{describleNum}}</text>
      <text>/</text>
      <text>140</text>
    </view>
  </view>

  <!-- 按钮 -->
  <view class="next" bindtap="hrefMine">保存</view>
</view>