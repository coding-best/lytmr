.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
  overflow-x: hidden;
}

.title {
  height: 176rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #efefef;
}

.title .title_img {
  width: 120rpx;
  height: 120rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_logo2.jpg');
  background-size: cover;
  border: 0.5rpx solid #e6e6e6;
  border-radius: 8rpx;
}

.title .title_info {
  width: 80%;
  margin-left: 20rpx;
}

.title .title_info .title_info_name {
  font-size: 26rpx;
}

.recruit-list-require {
  display: flex;
  margin-top: 10rpx;
}

.recruit-list-require-logo {
  width: 22rpx;
  height: 22rpx;
  background-size: cover;
  margin: 4rpx 6rpx 0 0;
}

.recruit-list-require>text {
  font-size: 22rpx;
  margin-right: 16rpx;
  color: #666;
}

.recruit-list-business {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  padding: 0 40rpx;
}

.recruit-list-business .recruit-list-require-logo {
  width: 22rpx;
  height: 22rpx;
  background-size: cover;
  margin-right: 12rpx;
  margin-bottom: 6rpx;
}

.recruit-list-business-title {
  display: flex;
  flex-direction: column;
}

.recruit-list-business-title>text {
  font-size: 22rpx;
  color: #666;
}

/* 职位描述 */

.describe {
  position: relative;
  width: 100%;
  background-color: #fff;
  margin-top: 56rpx;
  padding-bottom: 50rpx;
}

.describe .list_content>text {
  font-size: 22rpx;
  color: rgb(68, 68, 68);
}

.list_content {
  padding-top: 50rpx;
  margin: 0 40rpx;
}

.recruit_title {
  position: absolute;
  width: 186rpx;
  height: 44rpx;
  top: -20rpx;
  background-color: #3c98e7;
  border-radius: 0 50rpx 50rpx 0;
  text-align: center;
  line-height: 44rpx;
}

.recruit_title >text {
  color: #fff;
  font-size: 24rpx;
  margin-left: -10rpx;
}

.right {
  position: relative;
  left: 200rpx;
  width: 18rpx;
  height: 18rpx;
  background-size: contain;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_right2.png');
}
