.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
}

.container_top {
    position: relative;
    top: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 240rpx;
    background-size: cover;
    margin-bottom: 20rpx;
}

.ty_4 {
    border-radius: 50%;
    background-color: rgb(255, 255, 255);
    opacity: 0.412;
    box-shadow: 0px 3px 5.52px 0.48px rgba(60, 152, 231, 0.2);
    position: absolute;
    left: 341px;
    top: 335px;
    width: 70px;
    height: 70px;
    z-index: 136;
}

.top_img {
    width: 148rpx;
    height: 148rpx;
    background-color: #fff;
    border-radius: 50%;
    margin: 40rpx 20rpx 50rpx 40rpx;
}

.top_img_inside {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-top: 4rpx;
    margin-left: 4rpx;
    background-image: url('https://ofdznzfo9.qnssl.com/szdx_59db34f92fa49aa0%21400x400_big.jpg');
    background-size: cover;
}

.top_text {
    display: flex;
    flex-direction: column;
    margin-top: 25rpx;
}

.top_text>text:first-child {
    font-size: 28rpx;
    color: #fff;
    font-weight: 400;
    margin-bottom: 10rpx;
}

.top_text>text:last-child {
    font-size: 20rpx;
    color: #fff;
    font-weight: 300;
}

.top_more {
    background-size: cover;
    background-image: url('https://ofdznzfo9.qnssl.com/szdx_bottom_icon3.png');
    border-radius: 50%;
    background-color: rgb(255, 255, 255);
    box-shadow: 0rpx 3rpx 5.52rpx 0.48rpx rgba(60, 152, 231, 0.2);
    position: absolute;
    left: 50%;
    bottom: 0;
    margin-left: -35rpx;
    margin-bottom: -35rpx;
    width: 70rpx;
    height: 70rpx;
    z-index: 136;
}

/* 底下列表 */

.container_content {
    width: 100%;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.content_list {
  position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 90rpx;
    border-bottom: 1rpx solid #efefef;
    line-height: 90rpx;
    padding-left: 50rpx;
    font-size: 24rpx;
}

.content_list>text:first-child {
    display: block;
    width: 176rpx;
    color: rgb(102, 102, 102);
}

.content_list>text:last-child {
    color: #999;
}

.content_list_title {
    display: flex;
    align-items: center;
    padding-left: 0;
}

.content_list_title>text {
    padding-right: 6rpx;
    color: rgb(51, 51, 51);
}

.content_list_title>text:last-child {
    color: rgb(243, 75, 67)
}

.title_img {
    width: 22rpx;
    height: 26rpx;
    background-size: cover;
    margin: 0 11rpx 2rpx 17rpx;
}

.content_switch {
    display: flex;
    justify-content: space-between;
}

.content_switch>switch {
    margin-right: 40rpx;
}

.next {
    width: 670rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 50rpx;
    background-color: #3c98e7;
    color: #fff;
    margin: 40rpx;
    font-size: 26rpx;
}

.right {
  position: absolute;
   top: 36rpx; 
  right: 20rpx;
  width: 18rpx;
  height: 18rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_wd_%E6%A0%A1%E5%8F%8B%E9%AA%8C%E8%AF%81%E4%BF%AE%E6%94%B9%E8%B5%84%E6%96%99%E5%90%91%E5%8F%B3%E5%9B%BE%E6%A0%8718%E5%83%8F%E7%B4%A0.png');
  background-size: cover;
}