/* 在ip6下 1rpx=0.5px */

.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
}

text {
  padding: 0;
  margin: 0;
}

/* 首页轮播图 */

.swiper {
  height: 387rpx;
  position: relative;
}

swiper {
  height: 100%;
}

swiper image {
  height: 100%;
  width: 100%;
}

.slide_image {
  /* border-radius: 3px; */
}

/* 轮播图小圆点 */

.dots {
  margin: 0 4rpx;
  transition: all 0.6s;
  position: absolute;
  bottom: 12rpx;
  width: 98%;
  height: 32rpx;
  display: flex;
  justify-content: center;
}

/* 默认小圆点样式 */

.dots .dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  background: #ccc;
}

/* 激活小圆点样式 */

.dots .active {
  width: 16rpx;
  height: 8rpx;
  border-radius: 20rpx;
  background: #3c98e7;
}

/* 中间导航栏  */

.chooser {
  display: flex;
  justify-content: space-between;
  padding: 0 64rpx;
  border-radius: 4px;
  background: #fff;
  height: 194rpx;
}

/* 导航栏每一项 */

.chooser .chooser-solo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 32rpx;
}

.chooser .chooser-solo .chooser-icon {
  position: relative;
  height: 96rpx;
  width: 96rpx;
  background-size: cover;
}

.chooser .chooser-solo .chooser-describe {
  position: relative;
  font-size: 22rpx;
  white-space: nowrap;
  margin: 14rpx auto;
  color: rgb(102, 102, 102);
}

/*  新闻资讯  */

.small-title {
  display: flex;
  justify-content: center;
  height: 106rpx;
  line-height: 106rpx;
}

.small-title .title-row {
  color: #666;
  font-weight: 100;
  font-size: 20rpx;
}

.small-title .title-icon {
  width: 26rpx;
  height: 26rpx;
  background-size: cover;
  margin: auto 12rpx auto 26rpx;
}

.small-title .title-text {
  font-size: 26rpx;
  margin-right: 26rpx;
  color: rgb(102, 102, 102);
}

.small-title .title-more {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  right: 0rpx;
  font-size: 22rpx;
  margin-right: 20rpx;
  color: #b4b4b4;
}

.small-title .title-more > text {
  color: #b4b4b4;
}

.title-more-right {
  width: 18rpx;
  height: 18rpx;
  background-size: cover;
}

/* 新闻列表 */

.news {
  border-radius: 4px;
  background: #fff;
  margin: 0 20rpx;
  height: auto;
  padding: 7rpx 18rpx 10rpx 18rpx;
  position: relative;
}

/* 每一条新闻 */

.news .news_list {
  height: 151rpx;
  border-bottom: 0.1px solid #efefef;
  margin-top: 32rpx;
  position: relative;
}

.news .news_list:last-child {
  border-bottom: none;
}

/* 新闻列表左边图片 */

.news .news_list .news_list_img {
  height: 118rpx;
  width: 180rpx;
  float: left;
  margin-right: 20rpx;
  border-radius: 3px;
  background-size: cover;
  background-position: center center;
}

/* 新闻列表右边内容 */

.news .news_list .news_list_text {
  width: 70%;
  height: 120rpx;
  float: left;
  margin-top: -5rpx;
}

/* 标题让她超出两行隐藏 */

.news .news_list .news_list_text .news_list_text_title {
  height: 64rpx;
  font-size: 24rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.news .news_list .news_list_text .news_list_text_bottom {
  color: rgb(180, 180, 180);
  font-size: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 36rpx;
}

.news_list_text_bottom > text:first-child {
  color: rgb(60, 152, 231);
  font-weight: 300;
}

.news_list_text_bottom > text:last-child {
  margin-top: 2rpx;
  color: rgb(180, 180, 180);
}

/* 需求发布 */

.activity {
  border-radius: 4px;
  background: #fff;
  margin: 0 20rpx;
  height: auto;
  padding: 1rpx 18rpx 8rpx 18rpx;
  position: relative;
}

.activity_list {
  height: auto;
  border-radius: 3px;
  padding: 20rpx 0;
  border-bottom: 0.1px solid #efefef;
}

.activity_list:first-child {
  padding: 28rpx 0;
}

.activity_list:last-child {
  border-bottom: none;
}

/*  需求发布  */

.listBar {
  width: 10rpx;
  height: 10rpx;
  float: left;
  border-radius: 50%;
  margin: 16rpx 10rpx 10rpx 0;
}

.activity_list .news_list_title {
  width: 96%;
  font-size: 24rpx;
  float: left;
  margin-top: 6rpx;
  word-break: break-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden; /** 隐藏超出的内容 **/
}

.activity_list .news_list_content {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  padding: 23rpx 0 5rpx 0;
}

.activity_list .news_list_img {
  width: 50rpx;
  height: 50rpx;
  float: left;
  border-radius: 50%;
  background-size: cover;
  margin: 0 12rpx 0 20rpx;
}

.activity_list .news_list_name {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  line-height: 50rpx;
}

.activity_list .news_list_date {
  font-size: 20rpx;
  color: rgb(180, 180, 180);
  line-height: 50rpx;
}

/* 活动 */

.active_list {
  display: flex;
  justify-content: flex-start;
  padding-bottom: 32rpx;
}

.active_list_img {
  height: 154rpx;
  width: 214rpx;
  background-size: cover;
  margin-right: 20rpx;
  border-radius: 3px;
  background-position: center;
}

.active_list_content_title {
  width: 432rpx;
  font-size: 24rpx;
  margin-top: -5rpx;
  margin-bottom: 13rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.active_list_content_time, .active_list_content_address {
  display: flex;
  justify-content: flex-start;
  line-height: 20rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.active_list_content_time_icon, .active_list_content_address_icon {
  width: 18rpx;
  height: 18rpx;
  background-size: cover;
  margin-right: 12rpx;
}

.active_list_content_time > text, .active_list_content_address > text {
  width: 402rpx;
  font-size: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: rgb(153, 153, 153);
}

.active_list_content_other {
  display: flex;
  justify-content: space-between;
  margin-top: 26rpx;
}

.active_list_content_other_left > text:first-child {
  font-size: 24rpx;
  color: rgb(60, 152, 231);
  margin-right: 14rpx;
}

.active_list_content_other_left > text:last-child {
  font-size: 20rpx;
  color: rgb(180, 180, 180);
}

.active_list_content_other_right {
  display: flex;
  align-items: center;
}

.active_list_content_other_right > text {
  position: relative;
  color: #3c98e7;
  font-size: 24rpx;
  border: 0.1rpx solid #3c98e7;
  border-radius: 50rpx;
  padding: 4rpx 20rpx;
  bottom: 6rpx;
}

/* 校友企业 */

.business {
  border-radius: 4px;
  background: #fff;
  margin: 0 20rpx;
  height: auto;
  padding: 40rpx 0 21rpx 0;
  position: relative;
}

.business .business_card {
  display: inline-block;
  width: 325rpx;
  height: 216rpx;
  background-color: #fff;
  border-radius: 3px;
  margin-left: 20rpx;
  margin-bottom: 58rpx;
}

.business_card_img {
  width: 100%;
  height: 216rpx;
  background-size: cover;
  border-radius: 3px 3px 3px 3px;
}

.business_card_text {
  width: 330rpx;
  margin: 8rpx 0;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.blank {
  margin-top: 50rpx;
}

.blank-row {
  margin-right: 30rpx;
}

.blank-text {
  font-size: 20rpx !important;
}

