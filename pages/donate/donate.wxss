.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
  padding: 0 20rpx;
}

/*  大图部分  */

.title_img {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 710rpx;
  height: 460rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_44111527649006_.pic_hd.jpg');
  background-size: cover;
  background-position: center center;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.title_desc {
  background-color: rgb(0, 0, 0);
  opacity: 0.6;
  position: absolute;
  top: 390rpx;
  width: 710rpx;
  height: 70rpx;
  z-index: 26;
  border-radius: 0 0 8rpx 8rpx;
}

.title_img >text {
  position: relative;
  top: 406rpx;
  font-size: 26rpx;
  color: #fff;
  z-index: 27;
}

/* 新闻列表 */

.news {
  border-radius: 4px;
  background: #fff;
  margin-top: 20rpx;
  height: auto;
  padding: 32rpx 20rpx 28rpx 20rpx;
  position: relative;
}

/* 每一条新闻 */

.news .news_list {
  border-bottom: 1px solid #efefef;
  position: relative;
}

.news .news_list:last-child {
  border-bottom: none;
}

/* 新闻列表左边图片 */

.news .news_list .img_view {
  float: left;
}

.news .news_list .news_list_img {
  width: 214rpx;
  height: 154rpx;
  line-height: 280rpx;
  margin-right: 20rpx;
  border-radius: 3px;
  background-size: cover;
  background-position: center center;
}

/* 新闻列表右边内容 */

.news .news_list .news_list_text {
  width: 62%;
  float: left;
}

/* 标题让她超出两行隐藏 */

.news .news_list .news_list_text .news_list_text_title {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
  font-size: 24rpx;
  margin-top: -6rpx;
}

/*  截止日期 & 活动地点  */

.news .news_list .news_list_text .news_list_text_contain {
  height: 54rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
  font-size: 20rpx;
  color: rgb(153, 153, 153);
  margin-top: 4rpx;
}

.news_list_text_contain>text {
  color: rgb(153, 153, 153);
}

.news_list_text_bottom {
  font-size: 20rpx;
  display: flex;
  align-items: flex-end;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 26rpx;
}

.news_list_text_bottom > text {
  color: rgb(102, 102, 102);
}

.news_list_text_value {
  color: #f60;
  font-size: 30rpx;
  font-weight: bold;
}

.news_list_text_button {
  position: relative;
  right: -40rpx;
  width: 156rpx;
  height: 47rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_%E6%8D%90%E6%AC%BE%E6%8C%89%E9%92%AE@3x.png');
  background-size: cover;
}

.news_list_text_text {
  position: absolute;
  right: 20rpx;
  line-height: 47rpx;
  font-size: 22rpx;
  color: #fff;
}
