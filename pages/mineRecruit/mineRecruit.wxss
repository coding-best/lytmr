.container {
  position: relative;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
}

/* 校企招聘 */

.recruit {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.recruit-list {
  height: 222rpx;
  border-radius: 4px;
  background: #fff;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 7rpx 18rpx 10rpx 18rpx;
  position: relative;
}

.recruit-list:last-child {
  margin-bottom: 0;
}

.recruit-star {
  position: absolute;
  width: 40rpx;
  height: 44rpx;
  top: -10rpx;
  left: 16rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_%E4%BA%94%E6%98%9F%E8%A3%85%E9%A5%B0%E6%97%973.jpg');
  background-size: cover;
}

.recruit-list-title {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.recruit-list-title>text {
  font-size: 24rpx;
  color: rgb(51, 51, 51);
}

.title-color>text {
  color: rgb(60, 152, 231);
}

.recruit-list-require {
  display: flex;
  margin-top: 10rpx;
  padding-bottom: 16rpx;
  border-bottom: 0.1rpx solid #efefef;
}

.recruit-list-require-logo {
  width: 22rpx;
  height: 22rpx;
  /* background-image: url('https://ofdznzfo9.qnssl.com/szdx_require_time.png'); */
  background-size: cover;
  margin: 4rpx 6rpx 0 0;
}

.recruit-list-require>text {
  font-size: 20rpx;
  margin-right: 16rpx;
  color: #666;
}

.recruit-list-require>text:last-child {
  position: absolute;
  right: 20rpx;
  color: rgb(180, 180, 180);
  margin-right: 0rpx;
}

.recruit-list-button {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  height: 53rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.button {
  background-color: rgb(60, 152, 231);
  padding: 12rpx 28rpx;
  font-size: 22rpx;
  color: #fff;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.right {
  position: absolute;
  top: 22rpx;
  right: 17rpx;
  width: 18rpx;
  height: 18rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_wd_%E6%88%91%E5%8F%91%E8%B5%B7%E7%9A%84%E6%8B%9B%E8%81%98%E5%88%97%E8%A1%A8%E5%90%91%E5%8F%B3%E5%9B%BE%E6%A0%87.png');
  background-size: cover;
}

/* 没有私信 */

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_icon {
  width: 160rpx;
  height: 160rpx;
  background-image: url('https://ofdznzfo9.qnssl.com/szdx_wd_%E6%9A%82%E6%97%A0%E6%8B%9B%E8%81%98icon172%E5%83%8F%E7%B4%A0.png');
  background-size: cover;
  margin-top: 200rpx;
  margin-bottom: 60rpx;
}

.no>text {
  font-size: 22rpx;
  color: #999;
}

/* 遮罩 */

.layer {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.3;
  filter: blur(2px);
}

/* 弹窗 */

.alert {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 50%;
  left: 50%;
  margin-top: -129rpx;
  margin-left: -280rpx;
  width: 560rpx;
  height: 258rpx;
  border-radius: 8rpx;
  z-index: 999;
  background-color: #fff;
}

.desc {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 56rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
}

.desc >text {
  font-size: 28rpx;
  color: #666;
}

.desc_button {
  margin-top: 27rpx;
}

.desc_button>text {
  font-size: 30rpx;
  color: rgb(60, 152, 231);
}
